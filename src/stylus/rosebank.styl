/*
  Variables
*/

// Palette
navy = #003168
gold = #b4975a
white = #ffffff
grey = #555555

goldlinks = #9B7C3C
goldlinksHover = lighten(goldlinks, 30%)
navylinks = #2B75C7
navylinksHover = lighten(navylinks, 30%)

logoNavy = #333399
logoGold = #CC9933

/*
  Global elements
*/

a
  color goldlinks
  &:hover
    color goldlinksHover

.btn-primary
  border-color shade(navy, 20%)
  background-color tint(navy, 20%)
  &:hover
    background-color lighten(navy, 10%)
/*
  Header
*/

#header
  background navy
  border-bottom 10px solid gold

#header-inner
  padding-top 39px

#header-logo, #header.no-user #header-logo
  background url("https://s3-ap-southeast-2.amazonaws.com/rosebank-canvas/svg/rex.svg") no-repeat center center
  background-size cover
  width 70px
  height 70px
  top 6px
  bottom 0

/*
  Menu
*/

#menu
  margin-left 95px

// 1 pixel offset course menu dropdown fix
.menu-item-drop
  margin-left 1px

#menu_enrollments .customListOpen
  color goldlinks

.menu-item .menu-item-drop li:hover
  background-color lighten(gold, 80%)

.menu-item-drop-column-list li:hover .name
  color shade(goldlinks, 10%)

/*
  Help Corner Navigation
*/

#identity
  background-color gold

#identity a
  color white

/*
  Side bar (left)
*/

.list-view #section-tabs-header
  color navy

.list-view #section-tabs-header-subtitle
  display none

.list-view a.active
  color navylinks
  font-weight bold
  &:hover
    color navylinksHover

.list-view>ul>li>a:hover, .list-view>nav>ul>li>a:hover
  color shade(grey, 50%)

/*
  Breadcrumb Trail
*/

#breadcrumbs
  padding-top 3px

/*
  UI
*/

.ui-tabs .ui-tabs-nav li a
  color navylinks

.ui-tabs .ui-tabs-nav li.ui-tabs-active a
  color navy

/* 
  Login Component
*/

#modal-box.login-box
  background navy !important

body.modal #modal-box
  box-shadow none

body.webkit #modal-box.login-box input.text
  margin 0 8px 0 0
  padding 9px
  border none
  border-radius 4px
  box-shadow none
  background-clip padding-box
  width 197px

body.modal #modal-box .button, body.modal #login-box .button
  background-color #0099e0 !important
  border-color #0076ad !important

